@model Cheese.Models.Klant





<h2>Login</h2>

<form class="form-horizontal" asp-controller="Login" asp-action="log" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Voornaam" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Voornaam" class="form-control" />
            <span asp-validation-for="Voornaam" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Achternaam" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Achternaam" class="form-control" />
            <span asp-validation-for="Achternaam" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-default">Login</button>
        </div>
    </div>
</form>

