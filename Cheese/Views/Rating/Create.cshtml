@model Cheese.Models.Rating

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Rating</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Score" class="control-label"></label>
                <input asp-for="Score" class="form-control" />
                <span asp-validation-for="Score" class="text-danger"></span>
                <p>(Score van 1 tot 5)</p>
            </div>
            <div class="form-group">
                <label asp-for="Comment" class="control-label"></label>
                <input asp-for="Comment" class="form-control" />
                <span asp-validation-for="Comment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="KlantId" class="control-label"></label>
                <input asp-for="KlantId" class="form-control" />
                <span asp-validation-for="KlantId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="KaasId" class="control-label"></label>
                <input asp-for="KaasId" class="form-control" />
                <span asp-validation-for="KaasId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Rating">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
