<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Cheese</title>
    <link rel="icon" href="https://i.imgur.com/WL0lCCi.png">
 
 
    <environment include="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/site.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/css/bootstrap.min.css"
              asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    </environment>
</head>
<body>
    
                
                  
                   
            <div class="zoekfunctie">
                <a asp-area=""  asp-controller="Kaas" asp-action="Index" ><img src="~/images/logo.png" width="25%" ></a>
                 @using (Html.BeginForm("Producten", "Kaas",FormMethod.Get))
                    {
                    <div class="input-group custom-search-form">
                    <input type="text" name="SearchString" class="form-control">
                    <span class="input-group-btn">
                    <button class="btn btn-primary" input type= "submit">
                    <span class="glyphicon glyphicon-search"></span>
                    </button>
                    </span> 
                    </div>
                    }
               
                <!-- /input-group-->
       
      
    
            <!-- <div class="admin">
                <a asp-area="" asp-controller="Kaas" asp-action="Admin" style="font-size:20px"> Admin</a>
            </div> -->
           
          

            

            <div class="winkelwagen">
                <a asp-area="" asp-controller="Kaas" asp-action="Winkelwagen"> <span class="glyphicon glyphicon-shopping-cart" style="font-size:20px"></span></a>
            </div>
    </div>  
       <!-- Second navbar for sign in -->
     
    <nav class="navbar navbar-default">
      <div class="container">
        <!-- Brand and toggle get grouped for better mobile display -->
       <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="navbar-collapse-2">
          <ul class="nav navbar-nav navbar-left">
                    <li><a asp-area="" asp-controller="Kaas" asp-action="Producten" style="font-size:20px">Onze producten</a></li>
                    <li><a asp-area="" asp-controller="Home" asp-action="Land" style="font-size:20px">Land</a></li>
                    <li><a asp-area="" asp-controller="Home" asp-action="Type" style="font-size:20px">Soort kaas</a></li>
                    <li><a asp-area="" asp-controller="Home" asp-action="Kaaspakketten"style="font-size:20px">Kaaspakketten</a></li>
                    <li><a asp-area="" asp-controller="Home" asp-action="Kaasfondue"style="font-size:20px">Kaasfondue</a></li>
                    <li><a asp-area="" asp-controller="Home" asp-action="Lekker_bij_de_kaas"style="font-size:20px">Lekker bij de kaas</a></li>
                    @if(TempData["Voornaam"] == null)
                        {
                        <li><a asp-area="" asp-controller="Login" asp-action="Login" style="font-size:20px"> Login</a></li>
                         }

                    @if(TempData["Email"] != null) { 
                            
                            <li><a asp-area="" asp-controller="Login" asp-action="Admin"style="font-size:20px">Welkom @TempData["Voornaam"].ToString() </a></li>

                            <link href="//cdnjs.cloudflare.com/ajax/libs/animate.css/3.1.0/animate.min.css" rel="stylesheet" />
                        
                            <div class="container">
                                <div class="row">

                                    <div class="btn-group">
                                    <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                                        <span class="caret"></span>
                                    </button>
                                    <ul class="dropdown-menu" role="menu">
                                        <li><a asp-area="" asp-controller="Login" asp-action="LoggedIn"style="font-size:20px">Mijn Gegevens</a></li>
                                        <li><a asp-area="" asp-controller="Login" asp-action=""style="font-size:20px">Mijn Bestellingen</a></li>
                                    <li><a asp-area="" asp-controller="Login" asp-action=""style="font-size:20px">Favorieten</a></li>
                                        <li class="divider"></li>
                                    <li><a asp-area="" asp-controller="Login" asp-action="LogUit"style="font-size:20px">Uitloggen</a></li>
                                        
                                    </ul>
                                    </div>

                                </div>
                            </div>
                        
                            }
                               @{
                                TempData.Keep("Voornaam");
                                TempData.Keep("Achternaam");
                                TempData.Keep("Geslacht");
                                TempData.Keep("Id");
                                TempData.Keep("Email");
                                TempData.Keep("Wachtwoord");
                            
                            }
              
                    </ul>
                </div><!-- /.navbar-collapse -->
            </div><!-- /.container -->
            </nav><!-- /.navbar -->
        </div>       
   
        <!-- Second navbar for sign in -->
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav"></ul>
        </div>
    </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr/>
        <footer>
            <div style="text-align:center">
            <p>&copy; 2017 - Cheese</p>
            </div>
        </footer>
        <div class="about2">
            <b>Over</b>
            <p></p>
            <p>Cheese with ease is in 2017 opgericht door the Flying corporation. Het is een webshop met een groot assortiment aan verschillende kazen en producten die betrekking hebben tot kaas.</p>
    
        </div>
        <div class="about">    
            <b>Klantservice</b>
            <p></p>
            <li><a asp-area="" asp-controller="Home" asp-action="About">Retourneren</a></li>
            <li><a asp-area="" asp-controller="Home" asp-action="About">Garantie</a></li>
        </div>
        <div class="about1">
            <b>Contact informatie</b>
            <p></p>
            <p><b>Telefoon:</b>
                        <br>
            010-123 45 67
            </p>
            <p></p>
            <p><b>E-mail:</b>
            <br>
            info@cheesewithease.com</p>
            
                
        </div>

    <environment include="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-2.2.0.min.js"
                asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
                asp-fallback-test="window.jQuery"
                crossorigin="anonymous"
                integrity="sha384-K+ctZQ+LL8q6tP7I94W+qzQsfRV2a+AfHIi9k8z8l9ggpc8X+Ytst4yBo/hH+8Fk">
        </script>
        <script src="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/bootstrap.min.js"
                asp-fallback-src="~/lib/bootstrap/dist/js/bootstrap.min.js"
                asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal"
                crossorigin="anonymous"
                integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa">
        </script>
        <script src="~/js/site.min.js" asp-append-version="true"></script>
    </environment>

    @RenderSection("Scripts", required: false)
</body>
</html> 