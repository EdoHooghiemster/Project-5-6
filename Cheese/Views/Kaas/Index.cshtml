@model IEnumerable<Cheese.Models.Kaas>
@{
    ViewData["Title"] = "Home Page";
}

<h1>Aanbevolen producten</h1>

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/3.png" alt="ASP.NET" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    
                
                       
                    
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/2.png" alt="Visual Studio" class="img-responsive" />
            <div class="carousel-caption" role="option">
               
            </div>
        </div>
        <div class="item">
            <img src="~/images/1.jpg" alt="Package Management" class="img-responsive" />
            <div class="carousel-caption" role="option">
                
            </div>
        </div>
        
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Vorige</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Volgende</span>
    </a>
</div>



<br><br>
<h1>Onder de 5 Euro</h1>
<div class="container"> 
  <div class="row"> 
      <!-- BEGIN PRODUCTS --> 
      @foreach (var item in Model) { 
		  @if(item.Prijs <= 5){
  
  
      <div class="col-md-3 col-sm-6"> 
        <span class="thumbnail"> 
            
            <a asp-action="Product" asp-route-id="@item.Id">
            <img src= @Html.DisplayFor(modelItem => item.Afbeelding) alt="...">
            <h4> @Html.DisplayFor(modelItem => item.Naam)</h4>
            </a>

            
            <div class="ratings"> 
                    <span class="glyphicon glyphicon-star"></span> 
                    <span class="glyphicon glyphicon-star"></span> 
                    <span class="glyphicon glyphicon-star"></span> 
                    <span class="glyphicon glyphicon-star"></span> 
                    <span class="glyphicon glyphicon-star-empty"></span> 
                </div> 
            <p></p> 
            <hr class="line"> 
            <div class="row"> 
              <div class="col-md-6 col-sm-6"> 
                 
                <p class="price"> @Html.DisplayFor(modelItem => item.Prijs),-</p>
              </div> 
              <div class="col-md-6 col-sm-6"> 
                <a asp-area="" asp-controller="Kaas" asp-action="Winkelwagen"><button class="btn btn-success right" >Winkelwagen</button></a> 
                
              </div> 
               
            </div> 
        </span> 
      </div> 
      }}
  </div>
</div>
